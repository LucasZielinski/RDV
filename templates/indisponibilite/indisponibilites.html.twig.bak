{% extends 'base.html.twig' %}

{% block title %}Hello MedecinController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	Selectionnez la m√©decin voulu:<br>
	<select id="leSelect">
		<option value="" selected disabled hidden>---</option>
	{% for unMedecin in medecins|sort %}
		<option value="{{unMedecin}}">{{unMedecin}}</a></option>
	{% else %}
	{% endfor %}
	</select>
	<button id="btn" type="submit" onclick="valider()">Changer</button>
</div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
    function valider(){
		var value = document.getElementById("leSelect").value;
		var url = window.location.href;
		var longueur = url.length;
		url = url.slice(0,longueur);
		document.location.href=url+value;
	}
    </script>
{% endblock %}
