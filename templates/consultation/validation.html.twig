{% extends 'base.html.twig' %}

{% block title %}Hello ConsultationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	Liste des consultations :
    <ul>
        {% for consultation in consultations|sort %}		
				<li>{{ consultation.dateheure|date("m/d/Y") }} - {{ consultation.motif }} - {{ consultation.etat }} - {{ consultation.duree|date('H:i:s') }}</li>
				<a href="{{path('annulerConsultation',{id:consultation.id})}}">Annulée</a>
				<a href="{{path('validerConsultation',{id:consultation.id})}}">Validée</a>
				<a href="{{path('realiserConsultation',{id:consultation.id})}}">Réalisée</a>
		{% else	%}
			Pas de consultation trouvée.
		{% endfor %}
    </ul>
</div>
{% endblock %}
