{% extends 'base.html.twig' %}

{% block title %}Hello ConsultationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	Liste des consultations :
    <ul>
        {% for consultation in consultations %}		
			{% if consultation.dateheure|date("m/d/Y") == date()|date("m/d/Y") %}
				<li>{{ consultation.dateheure|date("m/d/Y") }} - {{ consultation.motif }} - {{ consultation.etat }} - {{ consultation.duree|format_time() }}</li>
			{% endif %}
		{% else	%}
			Pas de consultation trouv√©e.
		{% endfor %}
    </ul>
</div>
{% endblock %}
